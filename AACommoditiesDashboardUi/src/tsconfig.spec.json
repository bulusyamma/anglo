/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./out-tsc/spec",
    "types": [
      "jest",
      "node"
    ],
  },
  "files": [
    "polyfills.ts"
  ],
  "include": [
    "./**/*.spec.ts",
    "./**/*.d.ts"
  ],  
  "esModuleInterop": true,
  "emitDecoratorMetadata": true,
  "allowSyntheticDefaultImports": true,
  "moduleResolution": "Node",
  "module": "es2020",
}
